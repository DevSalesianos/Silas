@model Silas.Models.Usuarios.Usuario // Importamos el modelo de usuario
@{
    Layout = "_Layout"; // Usa el mismo layout que en Login
    ViewData["Title"] = "Registro";
}

<div class="login-box">
    <div class="login-header">
        <img src="/images/logoSalesianos.jpg" alt="Logo" />
        <h2>Registro de Usuario</h2>
        <p>Completa la información para registrarte</p>
    </div>

    <form method="post" asp-action="Register">
        <div class="form-group">
            <label for="username">Nombre de usuario</label>
            <input asp-for="name" required />
        </div>
        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input asp-for="email" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input asp-for="password" required />
        </div>
        <button type="submit" class="btn-primary">Registrarse</button>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.Mensaje)) ;
    <!-- Mostrar mensaje de confirmación de registro -->
    <p>@ViewBag.Mensaje</p>


    <!-- BOTÓN VOLVER -->
    <br />
    <a href="/Account/Login" class="btn-secondary">Volver al login</a>
</div>

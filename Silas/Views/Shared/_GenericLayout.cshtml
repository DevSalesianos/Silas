<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/css/generic.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="px-2">

    <div class="vh-100">
        <div class="d-flex flex-column h-100">

            <div class="d-flex flex-row align-items-center bg-danger justify-content-between p-2" style="height: 120px">
                <div class="p-1 bg-white">
                    <img class="ms-2" src="~/images/salesianos-logo.png" alt="Alternate Text" />

                </div>
                <div class="ms-4 d-flex flex-row gap-3">
                    <button class="btn btn-light btn mx-5 fs-4">Button 2</button>
                    <button class="btn btn-light btn mx-5 fs-4">Button 1</button>
                    <button class="btn btn-light btn mx-5 fs-4">Button 3</button>
                    <button class="btn btn-light btn mx-5 fs-4">Button 4</button>
                </div>
                <div class="d-flex flex-row-reverse">
                    <div class="d-flex flex-column mx-5 align-items-center">
                        <img style="width:70px" src="~/images/avatar.png" alt="Alternate Text" />
                        <h3 class="text-center"> Nomre usuario </h3>
                    </div>
                </div>

            </div>

            <div class="d-flex flex-row h-100">

                <div class="bg-warning col-2">
                    <h1 class="text-center"> IZQUIERDA</h1>
                </div>

                <div class="col-8">
                    <h1> MAIN PAGE</h1>
                    @RenderBody()
                </div>

                <div class="bg-warning col-2">
                    <h1 class="text-center"> DERECHA</h1>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>

    <!-- Fondo difuminado a pantalla completa -->
    <div class="bg-blur"></div>

    <!-- Contenedor que centra vertical/horizontalmente la 'tarjeta' -->
    <div class="center-screen">
        <!-- 'Tarjeta' con dos columnas 50/50 -->
        <div class="main-card">

            <!-- COLUMNA IZQUIERDA: Imagen sin difuminar + texto -->
            <div class="left-half">
                <div class="left-overlay">
                    <h2>CURSO 2024 - 2025</h2>
                    <p>“Somos futuro”</p>
                </div>
            </div>

            <!-- COLUMNA DERECHA: Aquí se inyecta la vista (ej. Login) -->
            <div class="right-half">
                @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>
